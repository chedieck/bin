#!/bin/sh

# Prints the current volume or ðŸ”‡ if muted.

tmpfile=/tmp/volume_bar.id
INCREMENT_STEP=5
volume_bar_id=$(cat "$tmpfile" 2> /dev/null)

function notify_volume() {
        new=$(pulsemixer  --get-volume | awk '{printf $1}')
        if [ -z "$volume_bar_id" ]; then 
            volume_bar_id=$(notify-send -p "ðŸ”Š Volume" "$new"%) 
        else
            notify-send -r "$volume_bar_id" "ðŸ”Š Volume" "$new"%
        fi
        echo "$volume_bar_id" > "$tmpfile"
}


case $BUTTON in
	#1) setsid -f "$TERMINAL" -e pulsemixer ;;
	2) pamixer -t ;;
	4) pamixer --allow-boost -i 5 && notify_volume;;
	5) pamixer --allow-boost -d 5 && notify_volume;;
	3) notify-send "ðŸ“¢ Volume module" "\- Shows volume ðŸ”Š, ðŸ”‡ if muted.
- Middle click to mute.
- Scroll to change." ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

[ $(pamixer --get-mute) = true ] && echo ðŸ”‡ && exit

vol="$(pamixer --get-volume)"

if [ "$vol" -gt "70" ]; then
	icon="ðŸ”Š"
elif [ "$vol" -gt "30" ]; then
	icon="ðŸ”‰"
elif [ "$vol" -gt "0" ]; then
	icon="ðŸ”ˆ"
else
        echo ðŸ”‡ && exit
fi

echo "$icon$vol%"
